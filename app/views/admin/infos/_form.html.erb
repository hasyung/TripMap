<%= simple_form_for [:admin, :info_list, @info] do |f| %>

  <%= f.input :name %>
  <%= f.fields_for :info_slug, @info.info_slug ||= @info.build_info_slug do |s|  %>  
    <%= s.input :slug, :input_html => { :class => "span-full" } %>
  <% end %>
  <%= f.input :is_free %>
  <%= f.input :order %>
  <%= f.association :info_list, :collection => InfoList.all, :prompt => t("helpers.links.select", :model_name => InfoList.model_name.human) %>

  <%= f.fields_for :letter, @info.letter ||= @info.build_letter do |l|  %>  
    <%= l.input :body, :as => :text, :input_html => { :class => "span-full" } %>
  <% end %>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
  </div>

<% end %>
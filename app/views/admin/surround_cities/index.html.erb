<%- model_class = SurroundCity -%>

<%= render "base" %>

<div class="box">

  <div class="box-title">
    <span class="icon"><i class="icon-th"></i></span>
    <h5><%= t('links.surround_cities.index') %></h5>
  </div>

  <div class="box-content">
    <table class="table table-bordered table-striped with-check">
      <thead>
        <tr>
          <th><input type="checkbox" id="title-table-checkbox" name="title-table-checkbox" /></th>
          <th><%= model_class.human_attribute_name(:map) %></th>
          <th><%= model_class.human_attribute_name(:city_name) %></th>
          <th class="action"><%= t('links.commons.action') %></th>
        </tr>
      </thead>
      </tbody>

        <% @surround_cities.each do |e| %>
          <tr>
            <td><%= check_box_tag "surround_city_ids[]", e.id, false, :id => "surround_city_#{e.id}" %></td>
            <td><%= e.map.name %></td>
            <td><%= e.city_name %></td>
            <td class="action">
              <%= link_to raw("<i class=\"icon-edit\"></i>"), edit_admin_surround_city_path(e), :title => t('links.versions.edit') %>
              <%= link_to raw("<i class=\"icon-trash\"></i>"), admin_surround_city_path(e), :method => :delete, :data => { :confirm => t('links.commons.confirm') } %>
            </td>
          </tr>
        <% end %>
 
      </tbody>
    </table>
  </div>
</div>

<div class="table-footer clearfix">
  <div class="paginates-info"><%= page_entries_info @surround_cities %></div>
  <%= paginate @surround_cities, :theme => "admin" %>
</div>
<div class="toolbar">
  <div class="btn-toolbar">
    <div class="btn-group">
      <% if params[:special_id].present? %>
        <%= link_to_if %w(index).include?(action_name), t('links.minorities.new'), new_admin_special_minority_path(params[:special_id]), class: 'btn btn-success' %>
        <%= link_to_if %w(index).include?(action_name), t('links.minorities.back_special'), admin_specials_path, class: 'btn btn-success' %>
        <%= link_to_if %w(new create edit update show).include?(action_name), t('links.minorities.back_index'), admin_special_minorities_path(params[:special_id]), class: 'btn btn-success' %>
      <% elsif params[:fight_id].present? %>
        <%= link_to_if %w(index).include?(action_name), t('links.minorities.new'), new_admin_fight_minority_path(params[:fight_id]), class: 'btn btn-success' %>
        <%= link_to_if %w(index).include?(action_name), t('links.minorities.back_fight'), admin_fights_path, class: 'btn btn-success' %>
        <%= link_to_if %w(new create edit update show).include?(action_name), t('links.minorities.back_index'), admin_fight_minorities_path(params[:fight_id]), class: 'btn btn-success' %>
      <% end %>
    </div>
  </div>
</div>
<div class="toolbar">
  <div class="btn-toolbar">
    <div class="btn-group">
      <%= link_to_if %w(index).include?(action_name), t('links.maps.new'), new_admin_map_path, :class => 'btn btn-success' %>
      <% if "edit update".include?(action_name) %>
      <%= link_to t('links.images.new'), 
                  new_admin_map_image_path(params[:id]), 
                  :class => 'btn btn-success' %>
      <% end -%>
      <%= link_to_if %w(new create update edit).include?(action_name), 
                     t('links.maps.index'), admin_maps_path, :class => 'btn btn-success' %>
    </div>
  </div>
</div>
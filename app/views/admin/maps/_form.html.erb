<%= simple_form_for [:admin, @map], :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :slug %>
  <%= f.association :province, :collection => Province.all, :prompt => t("helpers.links.select", :model_name => Province.model_name.human) %>
  <%= f.fields_for :map_cover, @map_cover do |c|  %>  
    <%= c.input :file, :as => :file %>
  <% end %>
  <%= f.fields_for :map_plat, @map_plat do |p|  %>  
    <%= p.input :file, :as => :file %>
  <% end %>
  <%= f.fields_for :map_description, @map_description do |d|  %>  
    <%= d.input :body, :as => :text, :input_html => { :class => "span-full" } %>
  <% end %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
  </div>
<% end %>
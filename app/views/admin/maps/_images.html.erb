<%- model_class = Image -%>
<div class="box">
  <div class="box-title">
    <span class="icon"><i class="icon-th"></i></span>
    <h5><%= t('links.maps.images.index') %></h5>
  </div>
  <div class="box-content">
    <table class="table table-bordered table-striped with-check">
      <thead>
        <tr>
          <th><input type="checkbox" id="title-table-checkbox" name="title-table-checkbox" /></th>
          <th><%= model_class.human_attribute_name(:file) %></th>
          <th><%= model_class.human_attribute_name(:order) %></th>
          <th class="action"><%= t('links.commons.action') %></th>
        </tr>
      </thead>
      </tbody>
        <% if !@images.blank? %>
        <% @images.each do |img| %>
          <tr>
            <td><%= check_box_tag "map_ids[]", img.id, false, :id => "img_#{img.id}" %></td>
            <td><%= img.file %></td>
            <td><%= img.order %></td>
            <td class="action">
              <%= link_to raw("<i class=\"icon-edit\"></i>"), 
                          admin_map_image_edit_path(params[:id], img.id), 
                          :title => t('links.maps.edit') %>
              <%= link_to raw("<i class=\"icon-trash\"></i>"),
                          admin_map_image_path(params[:id], img.id), 
                          :method => :delete,
                          :data => { :confirm => t('links.commons.confirm') } %>
            </td>
          </tr>
        <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
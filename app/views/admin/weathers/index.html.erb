<html>
	<head>
		<meta charset="utf-8" name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
		<title><%=t("admin.labels.weather_page_title")%></title>
		<style type="text/css">
			body { text-align: center; background: url(<%=@map_bg_image %>) no-repeat center; font-family: "微软雅黑"; color: white; width: 100%; margin: 0; }
			.city-name { font-size: 26px; top: 0; display: inline-block; margin: 8px 0; }
			.tmp { padding: 0; margin: 0; }
			.tmp_value { font-size: 100px; }
			.tmp_info { margin: -15px 0 20px 0; }
			.tmp_info_detail { display:inline-block; width:200px; text-align:right; }
			.fs28 { font-size: 28px; }
			.fs14 { font-size: 14px; }
			.wh80 { width: 80px; height: 80px; }
			.wh40 { width: 40px; height: 40px; }
			.wh14 { width: 14px; height: 14px; }
			.grey { color: black; }
			ul { padding: 0; margin: 0; width: 100%; }
			ul > li { display: inline-block; background-color: rgba(242,242,242, 0.6); width: 24%; }
			ul > li:first-child { border-radius: 8px 0 0 8px; }
			ul > li:last-child { border-radius: 0 8px 8px 0; }
			ul > li:only-child { border-radius: 8px; }
			ul > li > div { text-align: right; }
		</style>
	</head>

	<body>
		<div class="city-name">
			<%= image_tag "weather/images/icon_city.png" %>
			<span class="fs28"><%=@map.name%></span>
			<span><br /><%= Time.now.strftime("%Y/%m/%d") %></span>
		</div>
		<div class="tmp">
			<%= image_tag "weather/01/a_#{@weather[:tmp_pic_to]}.png", :class => "wh80"%>
			<span class="tmp_value"><%= @weather[:tmp_current]%></span>
		</div>
		<div class="tmp_info">
			<div class="tmp_info_detail">
				<%= image_tag 'weather/images/icon_l.png', :class => "wh14" %>
				<span class="fs14"><%= @weather[:tmp_today_low]%></span>&nbsp;&nbsp;
				<%= image_tag 'weather/images/icon_h.png', :class => "wh14" %>
				<span class="fs14"><%= @weather[:tmp_today_high]%></span>&nbsp;
				<span class="fs14"><%= @weather[:tmp_desc]%></span><br />
				<span><%= @weather[:tmp_wind]%></span><br />
				<span><%= t("admin.labels.humidity") %> <%= @weather[:tmp_humidity]%></span>
			</div>
		</div>
		<div id="other_cities">
			<ul>
				<% @surr_w.each do |e| %>
					<li>
					<%= image_tag "weather/02/a_#{e[:tmp_pic_to]}.png", :class => "wh40"%>
					<div>
						<p class="fs14 grey"><%=e[:city_name] %></p>
						<p class="fs14 grey"><%=e[:tmp_today_low] %>-<%=e[:tmp_today_high] %></p>
					</div>
				</li>
				<% end %>
			</ul>
		</div>
	</body>

</html>
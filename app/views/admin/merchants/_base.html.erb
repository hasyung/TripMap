<div class="toolbar">
  <div class="btn-toolbar">
    <div class="btn-group">
      <%= link_to_if %w(index).include?(action_name), t('links.merchants.new'), new_admin_merchant_path, class: 'btn btn-success' %>
      <% if "edit update".include?(action_name) %>
        <%= link_to t('links.images.new'), 
                    new_admin_merchant_image_path(params[:id]), 
                    :class => 'btn btn-success' %>
      <% end -%>
      <%= link_to_if %w(edit update new create ).include?(action_name), t('links.merchants.index'), admin_merchants_path, class: 'btn btn-success' %>
    </div>
  </div>
</div>
<%= simple_form_for [:admin,@place], html: { class: 'form-horizontal' } do |p| %>
  <%= p.input :name %>
  <%= p.input :slug %>
  <%= p.association :map, collection: Map.all, prompt: t("helpers.links.select", :model_name => Map.model_name.human) %>
  <%= p.fields_for :place_icon, @place_icon do |picon|  %>  
    <%= picon.input :file, :as => :file %>
  <% end %>
  <%= p.fields_for :place_image, @place_image do |pimg|  %>  
    <%= pimg.input :file, :as => :file %>
  <% end %>
  <%= p.fields_for :place_description_image, @place_description_image do |pdimage|  %>  
    <%= pdimage.input :file, :as => :file %>
  <% end %>
  <%= p.fields_for :place_audio, @place_audio do |pa|  %>  
    <%= pa.input :file, :as => :file %>
  <% end %>
  <%= p.fields_for :place_video, @place_audio do |pv|  %>  
    <%= pv.input :file, :as => :file %>
  <% end %>
  <%= p.fields_for :place_description, @place_description do |pd|  %>  
    <%= pd.input :body, :as => :text, input_html: { :class => "span-full"} %>
  <% end %>
  <div class="form-actions">
    <%= p.button :submit, :class => 'btn-primary' %>
  </div>

<% end %>
<%= simple_form_for [:admin,@place], html: { class: 'form-horizontal' } do |p| %>
  <%= p.input :name %>
  <%= p.input :slug %>
  <%= p.association :map, collection: Map.all, prompt: t("helpers.links.select", :model_name => Map.model_name.human) %>

  <%= p.fields_for :place_icon, @place.place_icon ||= @place.build_place_icon do |picon|  %>  
    <%= picon.input :file, :as => :file %>
  <% end %>

  <%= p.fields_for :place_image, @place.place_image ||= @place.build_place_image do |pimg|  %>  
    <%= pimg.input :file, :as => :file %>
  <% end %>

  <%= p.fields_for :place_description_image, 
                   @place.place_description_image ||= @place.build_place_description_image do |pdimage|  %>  
    <%= pdimage.input :file, :as => :file %>
  <% end %>

  <%= p.fields_for :place_audio, @place.place_audio ||= @place.build_place_audio do |pa|  %>  
    <%= pa.input :file, :as => :file %>
    <%= pa.input :duration %>
    <%= pa.input :order %>
  <% end %>

  <%= p.fields_for :place_video, @place.place_video ||= @place.build_place_video do |pv|  %>  
    <%= pv.input :file,  :as => :file %>
    <%= pv.input :cover, :as => :file %>
    <%= pv.input :duration %>
    <%= pv.input :order %>
  <% end %>

  <%= p.fields_for :place_description, 
                   @place.place_description ||= @place.build_place_description do |pd|  %>  
    <%= pd.input :body, :as => :text, input_html: { :class => "span-full"} %>
  <% end %>
  
  <div class="form-actions">
    <%= p.button :submit, :class => 'btn-primary' %>
  </div>
<% end %>
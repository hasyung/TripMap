<%= simple_form_for [:admin, @recommend], html: { class: 'form-horizontal' } do |r| %>
  <%= r.input :name %>
  <%= r.input :slug %>
  <%= r.input :is_free %>
  <%= r.input :menu_type %>
  <%= r.association :map, collection: Map.all, 
                          prompt: t("helpers.links.select", 
                          :model_name => Map.model_name.human) %>
  <%= r.input :category_cd do %>
      <%= r.select :category_cd, Recommend.categories_for_select(:value) %>
    <% end -%>
  <%= r.fields_for :recommend_cover, @recommend.recommend_cover ||= @recommend.build_recommend_cover do |c| %>
    <%= c.input :file, as: :file %>
    <% if @recommend.recommend_cover && @recommend.recommend_cover.file.present? %>
      <div class="control-group image">
        <div class="controls">
          <%= image_tag @recommend.recommend_cover.file %>
        </div>
      </div>
    <% end %>
  <% end %>

  <%= r.fields_for :recommend_video, @recommend.recommend_video ||= @recommend.build_recommend_video do |v| %>
    <%= v.input :file, as: :file %>
    <%= v.input :cover, as: :file %>
    <%= v.input :duration %>
    <% if @recommend.recommend_video && @recommend.recommend_video.file.present? %>
      <div class="control-group">
        <div class="controls">
          <%= video_tag(@recommend.recommend_video.file, :controls => true, :autobuffer => true, :width => 400, :height => 240, :poster => @recommend.recommend_video.cover ) %>
        </div>
      </div>
    <% end %>
  <% end %>  
  <div class="form-actions">
    <%= r.button :submit, :class => 'btn-primary' %>
  </div>

<% end %>
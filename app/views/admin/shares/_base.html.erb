<div class="toolbar">
  <div class="btn-toolbar">
    <div class="btn-group">
    	<%= link_to_if %w(index show).include?(action_name), t('links.shares.new'), new_admin_share_path, :class => 'btn btn-success' %>
      <%= link_to_if %w(show new create edit update).include?(action_name), 
                     t('links.shares.index'), admin_shares_path, :class => 'btn btn-success' %>
    </div>
    <% if %w(show edit update).include?(action_name) %>
       <div class="btn-group">
			<% if @share.draft? %>
				<a href="<%= publish_admin_share_path(@share, Share.states.publish(true)) %>" class="btn btn-success">
					<i class="icon-lock icon-large"></i>
				</a>
			<% else %>
				<a href="<%= publish_admin_share_path(@share, Share.states.draft(true)) %>" class="btn btn-danger">
					<i class="icon-unlock icon-large"></i>
				</a>
			<% end -%>
		</div>
	<% end -%>
  </div>
</div>
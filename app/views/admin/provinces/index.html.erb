<%- model_class = Province -%>
<%= render 'operation' %>
<div class="box">
  <div class="box-title">
    <span class="icon"><i class="icon-th"></i></span>
    <h5><%= t('links.provinces.index') %></h5>
  </div>
  <div class="box-content">
    <table class="table table-bordered table-striped with-check">
      <thead>
        <tr>
          <th><input type="checkbox" id="title-table-checkbox" name="title-table-checkbox" /></th>
          <th><%= model_class.human_attribute_name(:name) %></th>
          <th><%= model_class.human_attribute_name(:slug) %></th>
          <th><%= model_class.human_attribute_name(:maps_count) %></th>
          <th class="action"><%= t('links.commons.action') %></th>
        </tr>
      </thead>
      <tbody>
      <% @provinces.each do |p| %>
        <tr>
          <td><%= check_box_tag "province_ids[]", p.id, false, id: "province_#{p.id}" %></td>
          <td><%= p.name %></td>
          <td><%= p.slug %></td>
          <td><%= p.maps_count %></td>
          <td class="action">
              <%= link_to raw("<i class=\"icon-edit\"></i>"), edit_admin_province_path(p) %>
              <%= link_to raw("<i class=\"icon-trash\"></i>"), admin_province_path(p), method: :delete, data: { confirm: t('links.commons.confirm')} %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="table-footer clearfix">
  <div class="paginates-info"><%= page_entries_info @provinces %></div>
  <%= paginate @provinces, :theme => "admin" %>
</div>

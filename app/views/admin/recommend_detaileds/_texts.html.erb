<%- model_class = RecommendDetailed -%>
<div class="box" %>
  <div class="box-title">
    <span class="icon"><i class="icon-th"></i></span>
    <h5><%= t('links.recommend_detaileds.textlist') %>
      <%= link_to t('links.recommend_detaileds.newtext'), 
                    admin_recommend_record_detailed_text_new_path(
                      params[:recommend_id],
                      params[:record_id],
                      params[:id]) %>
    </h5>
  </div>
  <div class="box-content">
  <table class="table table-bordered table-striped with-check">
  <thead>
    <tr>
      <th>
        <input type="checkbox" id="title-table-checkbox" name="title-table-checkbox" />
      </th>
      <th><%= model_class.human_attribute_name(:text_body) %></th>
      <th><%= model_class.human_attribute_name(:order) %></th>
      <th class="action"><%= t('links.commons.action') %></th>
  </thead>
  <% if !@texts.blank? %>
  <% @texts.each do |t| %>
    <tbody>
      <tr>
        <td><%= check_box_tag "province_ids[]", t.id, false, id: "province_#{t.id}" %></td>
        <td><%= t.body %></td>
        <td><%= t.order %></td>
        <td class="action">
          <%= link_to raw("<i class=\"icon-edit\"></i>"), 
              admin_recommend_record_detailed_text_edit_path(params[:recommend_id], params[:record_id], params[:id], t.id) %>
          <%= link_to raw("<i class=\"icon-trash\"></i>"), 
              admin_recommend_record_detailed_text_path(params[:recommend_id], params[:record_id], params[:id], t.id), 
              method: :delete, 
              data: { confirm: t('links.commons.confirm')} %>
        </td>
  <% end %>
  <% end %>
  </tbody>
</table>    
</div>
</div>
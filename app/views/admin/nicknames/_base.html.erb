<div class="toolbar">
  <div class="btn-toolbar">
    <div class="btn-group">
      <%= link_to_if %w(index search).include?(action_name), t('links.nicknames.new'), new_admin_nickname_path, :class => 'btn btn-success' %>
      <%= link_to_if %w(show new create edit update search).include?(action_name), 
                     t('links.nicknames.index'), admin_nicknames_path, :class => 'btn btn-success' %>
    </div>
  </div>
  <div class="btn-group pull-right">
    <div class="controls pagination-right search">
      <%= simple_form_for :nickname, method: 'get', :url => search_admin_nicknames_path do |f| -%>
        <div class="input-append">
          <%= f.input_field :name, :placeholder => t("helpers.links.search_some", :model => Nickname.model_name.human), :value => nil %>
          <button type="submit" class="btn"><i class="icon-search"></i></button>
        </div>
      <% end -%>
    </div>
  </div>
</div>
<%= simple_form_for [:admin, @nickname], :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.association :map_serial_number, :collection => MapSerialNumber.all.map{|s| [s.code, s.id]}, name_method: :code, :prompt => t("helpers.links.select", :model_name => MapSerialNumber.model_name.human) %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
  </div>
<% end %>
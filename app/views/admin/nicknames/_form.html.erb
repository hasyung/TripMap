<%= simple_form_for [:admin, @nickname], :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.association :activate_map, :collection => ActivateMap.all.map{|s| [s.device_id, s.id]}, :prompt => t("helpers.links.select", :model_name => ActivateMap.model_name.human) %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
  </div>
<% end %>